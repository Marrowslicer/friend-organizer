<Window x:Class="FriendOrganizer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:FriendOrganizer.UI.View"
        Title="Firend Organizer"
        Height="480"
        Width="768"
        FontSize="20"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <view:NavigationView Grid.Column="0"
                             DataContext="{Binding NavigationViewModel}"/>
        
        <view:FriendDetailView Grid.Column="1"
                               DataContext="{Binding FriendDetailViewModel}"/>
    </Grid>
</Window>
